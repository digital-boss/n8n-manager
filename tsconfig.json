{
	"compilerOptions": {
		"lib": [
			"dom",
			"es2019"
		],
		"types": [
			"node",
			"jest"
		],
		"module": "commonjs",
		"removeComments": true,
		"strict": true,
		"preserveConstEnums": true,
		"resolveJsonModule": true,
		"declaration": true,
		"outDir": "./dist/",
		"target": "es2019",
		"sourceMap": true,
		"esModuleInterop": true,
		"useUnknownInCatchVariables": false,
		"baseUrl": ".",
    "moduleResolution": "node",
		"allowJs": true,
	},
	"include": [
		"src/**/*",
	],
	"exclude": [
		"**/*.spec.ts"
	]
}
